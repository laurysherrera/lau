//se le da nombre a la clase principal
public class reloj{
//atributos de la clase 
    private int precio;
    private string marca,color; 
//consulta la informacion que le damos al precio
    public int getprecio(){
//funcion que devuelve el valor y llama al precio
        return this.precio;
   }
//cosultar la informacion que le damos a color
    public string getcolor(){
//funcion que devuelve al valor y llama a color
        return this.color;
    }
//consultar la informacion que le damos a marca
    public string getmarca(){
//funcion que devuelve al valor y llama a marca
        return this.marca;    
    }
//configura la informacion que le damos a precio
    public void setprecio (int precio){
//funcion que llama a precio
        this.precio=precio;
    }
//configura la informacion que le damos a color
    public void setcolor (string color){
//funcion que llama a color
        this.color=color;
    }
//configura la informacion que le damos a marca
    public void setmarca (String marca){
//funcion que llama a marca
        this.marca=marca;
    }
//lee y muestra en console la informacion 
public void Tostring(){
Console.WriteLine ("el reloj " +this.marca + " de color " + this.color + " cuesta " + this.precio);
}
}
//se le da un nombre a la clase 
public class relojeria{
//inicia el procedimiento del programa 
    public static void Main(String[] args){
//define las instancias de reloj como RICHAR y la inicializo como nueva
reloj RICHAR = new reloj();
